<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="col-12 text-center mt-5">Editing CampGround <%=camp.name%></h1>
        <div style="width:30%;margin:20px auto">
            <form class="col-12" enctype="multipart/form-data" action="/campgrounds/<%=camp._id%>?_method=PUT"
                method="post">
                <input type="hidden" name="hidden" id="hidden" value="<%=camp.image%>">
                <div class="form-group">
                    <label for="name">Enter name of Camp</label>
                    <input type="text" name="name" value="<%=camp.name%>" id="name" class="form-control"
                        placeholder="Name" required />
                </div>
                <div class="form-group">
                    <label for="price">Enter Price</label>
                    <input type="number" name="price" id="price" class="form-control" placeholder="Price"
                        value="<%=camp.price%>" step="0.01" required />
                </div>
                <div class="form-group"><label for=""><input type="checkbox" name="" id="check"> Want to
                        change image?</label></div>
                <label for="inputGroupFile01">Enter image Url</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" accept="image/*" class="custom-file-input" name="image" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01" id="fileLabel">Choose File</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Enter Description</label>
                    <textarea name="description" id="description" placeholder="Enter description" cols="30" rows="10"
                        class="form-control" required>
<%=camp.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-block">
                        <i class="fa fa-paper-plane"></i> Submit
                    </button>
                </div>
            </form>
            <a href="/campgrounds/<%=camp._id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer%>
<script>
    $(document).ready(function () {

        $("#inputGroupFile01").attr("disabled", true);
        $('input[type="file"]').change(function (e) {
            var fileName = e.target.files[0].name;
            $("#fileLabel").text(fileName);
        });
        $("#check").click(function () {
            if ($("#check").is(":checked")) {
                $("#inputGroupFile01").attr("disabled", false);
                $("#inputGroupFile01").attr("required", true);
            }
            else {
                $("#inputGroupFile01").attr("disabled", true);
                $("#inputGroupFile01").attr("required", false);

            }
        })

    });
</script>
