<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 class="col-12 text-center mt-5">ADD new Comment to <%= camp.name %></h1>
    <div style="width:30%;margin:20px auto">
      <form class="col-12" action="/campgrounds/<%= camp._id%>/comments" method="post">
        <div class="form-group">
          <label for="name">Enter Text for comment</label>
          <input type="text" name="comment[text]" id="name" class="form-control" placeholder="Text" required />
        </div>
        <div class="form-group">
          <button class="btn btn-outline-primary btn-block">
            <i class="fa fa-paper-plane"></i> Submit
          </button>
        </div>
      </form>
      <a href="/campgrounds/<%= camp._id%>">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer%>
